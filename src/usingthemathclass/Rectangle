package usingthemathclass;

/**
 *
 * @author OrlandoJoseHidalgoRamirez
 */
public class Rectangle 
{
    double side1;
    double side2;
    
    public Rectangle (double s1, double s2)
        {
            side1 = s1;
            side2 = s2;
        }
    public void area()
    {
        double area = (side1 * side2);
            System.out.println("The area of the rectangle is" + area);
    }
    public void perimeter()
    {
        double peri = (side1 + side1 + side2 + side2);
            System.out.println("The perimeter of the rectangle is" + peri);
        
    }
    public void diagonalLength()
    {
        double len = (Math.sqrt((side1 * side1) + (side2 * side2)));
            System.out.println("The diagonal length is" + len);
    }
    
    
}
